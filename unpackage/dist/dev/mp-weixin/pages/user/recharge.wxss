.charge-wrapper {
  font-size: 32rpx;
}
.charge-wrapper .charge-header {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    font-size: 28rpx;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    padding: 24rpx;
    background: rgba(39, 176, 214, 0.15);
    margin: 24rpx;
    border-radius: 12rpx;
}
.charge-wrapper .charge-content {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
}
.charge-wrapper .charge-content .charge-content-item {
      width: 200rpx;
      text-align: center;
      border: 2rpx solid #E4E7ED;
      height: 100rpx;
      line-height: 100rpx;
      margin: 24rpx;
      border-radius: 12rpx;
}
.charge-wrapper .charge-content .active {
      background: url(data:image/png;base64,) no-repeat bottom right;
      border: 2rpx solid #27b0d6;
      color: #27b0d6;
}
.charge-wrapper .other-amount {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    margin: 24rpx;
    font-size: 28rpx;
}
.charge-wrapper .other-amount input {
      width: 200rpx;
      height: 80rpx;
      border: 2rpx solid #E4E7ED;
      margin: 0 16rpx;
}
.charge-wrapper .other-amount .ch-red {
      color: #fa436a;
}
.charge-wrapper .pay-amount {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    margin: 50rpx 24rpx;
}
.charge-wrapper .pay-amount .pay-red {
      color: #27b0d6;
      font-weight: bolder;
      font-size: 40rpx;
}
.charge-wrapper .pay-btn {
    margin: 24rpx;
}
.charge-wrapper .pay-btn button {
      background: #27b0d6;
}

