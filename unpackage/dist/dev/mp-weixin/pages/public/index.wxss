.content {
  height: 100vh;
  background-color: #fff;
  padding: 0rpx 100rpx;
}
.login-t {
  text-align: center;
  padding: 50rpx 0;
}
.login-logo {
  width: 180rpx;
  height: 180rpx;
  border-radius: 20rpx;
  background-color: #f8f8f8;
  /* margin: 0 auto; */
}
.login-m {
  margin-bottom: 100rpx;
}
.login-item {
  border-bottom: 2rpx solid #d0d0d0;
  overflow: hidden;
  padding: 10rpx;
  color: #333;
  margin-bottom: 30rpx;
}
.login-item-input {
  display: inline-block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  box-sizing: border-box;
}
.login-item .btn {
  border: none;
  width: 40%;
  text-align: right;
  padding: 0;
}
.login-item .btn.btn-b {
    background: none;
    color: #333 !important;
}
.login-b .btn {
  color: #999;
}
.btn-b {
  color: #fff !important;
}
.login-other {
  margin-bottom: 40rpx;
}
.login-other .item {
    padding: 20rpx 0;
}
.btn-square {
  height: 80rpx;
  line-height: 80rpx;
}

